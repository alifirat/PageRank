#include "Dictionary.h"
#include <stdlib.h>
#include <iostream>
#include <fstream>

using namespace std;

Dictionary::Dictionary() {
  
}

void Dictionary::dictionary_from_file(string filename) {
  int i = 0;
  ifstream file(filename);
  string line;
  if(!file.is_open()) {
    perror("Error open");
    return;
  }
  while(getline(file,line)) {
    dic[i++] = line;
  }
  file.close();
}

string Dictionary::get_random_value(int min, int max) {
  srand (time(NULL));  
  return dic[rand() % max + min];
}

void Dictionnary::random_list(vector<string> &v) {
  for(int i = 0; i < 5; i++) {
    v.push_back(get_random_value(0,999));
  }
}

void Dictionary::print_dictionary() {
  for(int i = 0; i < 1000; i++) {
    cout << dic[i] << endl;
  }
}

void create_nodes_with_words(string filename, int nodes) {
  filename += "_with_words";
  ofstream myfile(filename);
  
  vector<string> tmp;
  for(int i = 0; i < nodes; i++) {
    random_list(v);    
  }
}

int Dictionary::size() {
  return 1000;
}


