#ifndef DICTIONARY_H
#define DICTIONARY_H

#include <string>
#include <vector>

class Dictionary {
 public:
  Dictionary();
  void dictionary_from_file(std::string filename);
  void print_dictionary();
  void random_list(vector<string> &);
  string get_random_value(int, int);
  void create_nodes_with_words(string, int nodes);
  int size();
 private:
  std::string dic[1000];
};

#endif 
